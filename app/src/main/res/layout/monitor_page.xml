<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 1. 设备监测页面（原有蓝牙功能） -->
    <LinearLayout
        android:id="@+id/monitor_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card"
        android:elevation="2dp"
        android:layout_margin="8dp">

        <!-- 原有蓝牙连接按钮 -->
        <Button
            android:id="@+id/btnConnectDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@null"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生理数据检图表"
            android:textColor="#616161"
            android:layout_marginBottom="8dp"/>


        <!-- 原有图表（保留） -->
<!--        <com.example.myapplication.CustomLineChartView-->
<!--            android:id="@+id/customLineChart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="#FFFFFF"-->
<!--            android:padding="8dp"-->
<!--            android:layout_marginTop="8dp"/>-->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:spacing="12dp">

            <!-- 1. 体温折线图 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/tempLineChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F8F9FA"
                android:padding="8dp"/>

            <!-- 2. 心率折线图 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/heartLineChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F8F9FA"
                android:padding="8dp"/>

            <!-- 3. 血氧折线图 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/spo2LineChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F8F9FA"
                android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>